<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".RateFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        >

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="@dimen/rate_icon_size"
            android:layout_height="@dimen/rate_icon_size"
            android:layout_margin="20dp"
            android:src="@drawable/ic_sentiment_very_satisfied_black_24dp" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="@dimen/rate_icon_size"
            android:layout_height="@dimen/rate_icon_size"
            android:layout_margin="20dp"
            android:src="@drawable/ic_sentiment_dissatisfied_black_24dp" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="@dimen/rate_icon_size"
            android:layout_height="@dimen/rate_icon_size"
            android:layout_margin="20dp"
            android:src="@drawable/ic_mood_bad_black_24dp" />

        <ImageView
            android:id="@+id/imageView0"
            android:layout_width="@dimen/rate_icon_size"
            android:layout_height="@dimen/rate_icon_size"
            android:layout_margin="20dp"
            android:src="@drawable/ic_cancel_black_24dp" />

    </LinearLayout>
</layout>